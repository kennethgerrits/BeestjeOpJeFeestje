@model IEnumerable<BeestjeOpJeFeestje.Domain.Models.BeastVM>

<h2 class="page-header">Stap 1</h2>
<div>
    <img src="~/Images/stap1.png" alt="stap1.png" width="500" class="center-block" style="padding-bottom: 2%" />
</div>

<h4>Kies uw diertjes</h4>
<hr />

<div class="row">
    <div class="col-lg-9">
        @foreach (var item in Model)
        {
            <div class="col-lg-4">
                <div class="thumbnail">
                    <img src="~/Images/@item.ImagePath" alt="animal" width="50" height="50"/>
                    <div class="caption" align="center">
                        <h3 style="word-wrap: break-word">@item.Name <br/> €@item.Price</h3>
                        @using (Html.BeginForm("AddCheckedAnimal", "Booking", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <input type="text" name="BeastID" id="BeastieId" value="@item.ID" hidden/>
                            <input class="btn btn-default" type="submit" value="@item.Selected"/>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="col-lg-2">
        @Html.Action("InfoBar")
    </div>
</div>

@using (Html.BeginForm("Step1", "Booking", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="col-lg-12" align="center">
        <input type="submit" value="Ga door naar stap 2" class="btn btn-success" />
    </div>
}
